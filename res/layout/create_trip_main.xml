<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/name_trip_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name_trip_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title" >
            </TextView>

            <EditText
                android:id="@+id/name_trip_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location_trip_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/location_trip_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="location" >
            </TextView>

            <EditText
                android:id="@+id/location_trip_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" 
               >
            </EditText>
        </LinearLayout>

        <DatePicker
            android:id="@+id/date_trip_datepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/time_trip_datepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/add_friends_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add your friends" />

        <LinearLayout
            android:id="@+id/add_friends_name_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/add_friends_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name" >
            </TextView>

            <EditText
                android:id="@+id/add_friends_name_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_friends_phone_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/add_friends_phone_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="phone" >
            </TextView>

            <EditText
                android:id="@+id/add_friends_phone_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_friends_location_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/add_friends_location_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="location" >
            </TextView>

            <EditText
                android:id="@+id/add_friends_location_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/add_friends_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="add more friends" >
        </Button>

        <RelativeLayout
            android:id="@+id/create_trip_relative"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/create_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:text="create event" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>